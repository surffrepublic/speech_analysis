<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'View Phoneme Data', phonemes_path %></li>
  <li><%= link_to 'Enter Phoneme Data', new_phoneme_path %></li>
  <li class="active"><%= link_to 'View Speakers', speakers_path %></li>
  <li><%= link_to 'Create Speaker', new_speaker_path %></li>
</ul>

<h1>Listing Speakers</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Native language</th>
    <th>Other languages</th>
    <th>Age</th>
    <th>Gender</th>
    <th>English onset</th>
    <th>Learning method</th>
    <th>English country residence</th>
    <th>Length english residence</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @speakers.each do |speaker| %>
    <tr>
      <td><%= speaker.name %></td>
      <td><%= speaker.city.name %></td>
      <td><%= speaker.state.name %></td>
      <td><%= speaker.country.name %></td>
      <td><%= speaker.native_language.name %></td>
      <td><%= speaker.other_languages %></td>
      <td><%= speaker.age %></td>
      <td><%= speaker.gender %></td>
      <td><%= speaker.english_onset %></td>
      <td><%= speaker.learning_method %></td>
      <% if !speaker.english_country_residence.nil? %>
        <td><%= speaker.english_country_residence.name %></td>
      <% else %>
        <td><%= nil %></td>
      <% end %>
      <td><%= speaker.length_english_residence %></td>
      <td><%= link_to 'Show', speaker, class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Edit', edit_speaker_path(speaker), class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Destroy', speaker, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn
        btn-danger btn-xs' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_speaker_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Speaker
<% end %>
